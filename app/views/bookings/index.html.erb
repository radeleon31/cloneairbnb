<div class="container mt-8">
  <div class="row">
    <% @booking.each do |booking| %>
      <div class="col-12">
        <div class="flat-show-booking">
          <div class="helicopter-card-content">
            <div class="helicopter-card-title">
              <h4><%= booking.total_amount %></h4>
            </div>
            <p><%= booking.status %> Helicopter id : <%= booking.helicopter_id %>  </p>
            <div class="flex">
              <div class="flex">
                <i class="material-icons mr-2">Date start</i><span><%= booking.start_date %></span>

              </div>
              <div class="flex ml-8">
                <i class="material-icons mr-2">Date end </i> <%= booking.end_date %>
              </div>

            </div>
            
            <div class="flex ml-8">
                <i Hour Rent </i> <%= booking.end_date -  booking.start_date %>>
            </div>

          </div>
          <div class="helicopter-card-actions d-flex">

            <% if policy(booking).edit? %>
              <p class = "mr-2"> <%= link_to 'Edit', edit_helicopter_path(booking.id) %> </p>
            <% end %>
            <% if policy(booking).destroy? %>
              <p class = "mr-2"> <%= link_to 'Remove', helicopter_path(booking.id), method: :delete, data: { confirm: 'Are you sure?' } %> </p>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
