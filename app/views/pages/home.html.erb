<div class="banner" style="background-image: url(<%= image_path "banner.jpg", alt: "Helicopter-banner"%>)">
  <div class="container">
    <div class="d-flex">
        <h1 > <strong class="color-one">HELI</strong></h1>
        <h1 > <strong class="color-two">RENT</strong></h1>
    </div>
    <p><span id="banner-typed-text"></span></p>
    <%= link_to "Explore!", helicopters_path, class:"btn btn-flat" %>
  </div>
</div>

<div class="container mt-5 mb-5">
    <h1 class="mb-2"> Rent <strong>what you desire</strong></h1>
    <div class="cards">
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path "helicopter-one.jpg", alt: "Helicopter-one"%>)">
        Top class helicopters
      </div>

      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path "helicopter-two.jpg", alt: "Helicopter-two"%>)">
        Enjoy the view from sky
      </div>

      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path "helicopter-three.jpg", alt: "Helicopter-three"%>)">
        Go everywhere you want
      </div>
    </div>
</div>

<div class="black mt-5 mb-5">
  <div class="cards-two center">
      <div class="card-category-two" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path "helicopter-four.jpg", alt: "Helicopter-four"%>)">
        <strong><%= link_to "Rent a Helicopter", helicopters_path, class:"display-4 text-white font-weight-bold" %></strong>
      </div>

      <div class="card-category-two" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path "helicopter-five.jpg", alt: "Helicopter-five"%>)">
        <strong><%= link_to "Offer your helicopter", new_helicopter_path, class:"display-4 text-white font-weight-bold" %></strong>
      </div>
    </div>
</div>
